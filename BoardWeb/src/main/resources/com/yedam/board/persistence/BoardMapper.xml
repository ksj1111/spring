<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.board.persistence.BoardMapper">
	
	<sql id="criteria">
	<trim prefix="(" suffix=") and " prefixOverrides="or">
			<foreach collection = "typeArr" item="type">
			<trim prefix = " or ">
			<choose>
			<when test="type == 'T'.toString()">
				title like '%'||#{keyword}||'%'
			</when>
			<when test="type == 'C'.toString()">
				content like '%'||#{keyword}||'%'
			</when>
			<when test="type == 'W'.toString()">
				writer like '%'||#{keyword}||'%'
			</when>
			</choose>
			</trim>
			</foreach>
			</trim>
	</sql>
	
	<select id="getList" resultType="com.yedam.board.domain.BoardVO">
		select * from tbl_board where bno > 0
	</select>
	
	<select id="getListWithPaging" resultType="com.yedam.board.domain.BoardVO" parameterType = "com.yedam.board.domain.Criteria">
			<![CDATA[
			select bno, title, content, writer, regdate, updatedate
			from (select /* + INDEX_DESC(tbl_board pk_board) */
				rownum rn, bno, title, content, writer, regdate, updatedate
				from tbl_board
				where 
			]]>
			<include refid="criteria"></include>
			<![CDATA[
				rownum <= #{pageNum} * #{amount}
				)
			where rn > (#{pageNum} -1) * #{amount}
			]]>
	</select>
	
	<insert id="insertSelectKey" parameterType="com.yedam.board.domain.BoardVO">
	  <selectKey keyProperty="bno" order="BEFORE" resultType="long">
	    select seq_board.nextval from dual
	  </selectKey>
	  insert into tbl_board (bno, title, content, writer)
	  values (#{bno}, #{title}, #{content}, #{writer})
	</insert>
	
	<select id="read" resultType="com.yedam.board.domain.BoardVO">
		select * from tbl_board where bno = #{bno}
	</select>
	
	<delete id="delete" parameterType="long">
		delete from tbl_board where bno = #{bno}
	</delete>
	
	<update id="update" parameterType="com.yedam.board.domain.BoardVO">
		update tbl_board
		set title=#{title},
		    content=#{content},
		    updatedate=sysdate
		where bno=#{bno}
	</update>
	
	<select id ="getTotalCount" resultType="int">
		select count(*) from tbl_board where
		<include refid="criteria"></include>
		bno > 0
	</select>

</mapper>